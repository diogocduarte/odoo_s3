<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="base_config_settings_view_form_inherit_print" model="ir.ui.view">
            <field name="name">base.config.settings.inherit</field>
            <field name="model">base.config.settings</field>
            <field name="inherit_id" ref="base_setup.view_general_configuration"/>
            <field name="arch" type="xml">
                <xpath expr="//group[@name='authentication']" position="before">
                    <group string="AWS S3 Storage" name="aws_storage">
                        <div>
                            <label for="s3_profile"/>
                            <div>
                                <field name="s3_profile"/>
                            </div>
                            <label for="s3_bucket"/>
                            <div>
                                <field name="s3_bucket"/>
                            </div>
                            <label for="s3_load"/>
                            <div>
                                <field name="s3_load"/>
                            </div>
                            <div>
                                <button type="object"
                                        name="test_move_filestore_to_s3"
                                        string="Test S3 Settings"/>
                            </div>
                        </div>
                    </group>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
